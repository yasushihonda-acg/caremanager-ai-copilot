# direnv設定 - caremanager-ai-copilot
# 環境分離ルールに従い、プロジェクト固有の認証情報を設定

# GitHub CLI 認証分離
export GH_CONFIG_DIR="$(pwd)/.gh"

# GCP 構成固定
export CLOUDSDK_ACTIVE_CONFIG_NAME="caremanager-ai-copilot"
export GCLOUD_PROJECT="caremanager-ai-copilot"

# Firebase 構成固定
export FIREBASE_PROJECT="caremanager-ai-copilot"
